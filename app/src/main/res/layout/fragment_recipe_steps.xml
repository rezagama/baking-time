<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="title"
            type="String" />
        <variable
            name="stepDescription"
            type="String" />
    </data>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <FrameLayout
            android:id="@+id/container_media_player"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_media_player_height"
            android:orientation="vertical" />
        <TextView
            android:id="@+id/text_step_title"
            android:padding="@dimen/dimen_padding_long"
            android:text="@{title}"
            android:textColor="@color/colorTextPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Title here"/>
        <TextView
            android:id="@+id/text_step_description"
            android:paddingLeft="@dimen/dimen_padding_long"
            android:paddingRight="@dimen/dimen_padding_long"
            android:text="@{stepDescription}"
            android:textColor="@color/colorTextPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Description text here"/>
    </LinearLayout>
</layout>