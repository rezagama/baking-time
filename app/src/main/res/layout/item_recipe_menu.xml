<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="menuTitle"
            type="String" />
    </data>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_margin_small"
        card_view:contentPadding="@dimen/dimen_padding_long">
        <TextView
            android:text="@{menuTitle}"
            android:textColor="@color/colorTextPrimary"
            android:drawableLeft="@mipmap/ic_launcher_round"
            android:drawableStart="@mipmap/ic_launcher_round"
            android:drawablePadding="@dimen/dimen_padding_small"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            tools:text="Recipe Ingredients"/>
    </android.support.v7.widget.CardView>
</layout>